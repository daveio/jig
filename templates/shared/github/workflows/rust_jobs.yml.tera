build:
  runs-on: ubuntu-latest
  steps:
  - uses: actions/checkout@v4
  - name: Build
    run: cargo build --verbose
  - name: Run tests
    run: cargo test --verbose

clippy:
  runs-on: ubuntu-latest
  steps:
  - uses: actions/checkout@v4
  - name: Install clippy
    run: rustup component add clippy
  - name: Clippy check
    run: cargo clippy -- -D warnings
